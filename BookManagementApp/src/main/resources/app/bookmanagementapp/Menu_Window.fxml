<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="800.0" maxWidth="1070.0" minHeight="800.0" minWidth="1070.0" prefHeight="800.0" prefWidth="1070.0" xmlns:fx="http://javafx.com/fxml" fx:controller="app.bookmanagementapp.MenuController" fx:id="vBox">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
                  <MenuItem mnemonicParsing="false" text="Import" onAction="#onImportButtonClick" fx:id="importMenu"/>
                <MenuItem mnemonicParsing="false" text="Create" onAction="#onCreateButtonClick"/>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="Manual" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox prefHeight="50.0" prefWidth="200.0">
         <children>
            <TextField HBox.hgrow="ALWAYS" fx:id="searchBar"/>
            <Button mnemonicParsing="false" text="Search" HBox.hgrow="ALWAYS" onAction="#onSearchButtonClick" fx:id="searchButton"/>
            <MenuButton mnemonicParsing="false" text="Filter by Tags" HBox.hgrow="ALWAYS">
              <items>
              </items>
            </MenuButton>
         </children>
      </HBox>
   </children>
</VBox>
